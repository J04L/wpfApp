<Window x:Class="app_wpf.ListaUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_wpf"
        mc:Ignorable="d"
        Title="ListaUsuarios" Height="675" Width="1200">
    <Border Padding="10" Background="{StaticResource FondoDeVentanaBrush}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="169*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="106*"/>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="486*"/>
            </Grid.RowDefinitions>

            <WrapPanel >
                <Image Source="image/LogoHotel.jfif" Height="70"/>
                <TextBlock  FontSize="40" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextoClaroBrush}">Nombre Hotel</TextBlock>
            </WrapPanel>
            <Border Grid.Column="1" CornerRadius="50,0,20,0"  BorderThickness="0,4,0,4" 
            BorderBrush="{StaticResource BordesRecuadrosBrush}"  
            VerticalAlignment="Top"  Background="{StaticResource FondoRecuadrosBrush}">
                <Grid  VerticalAlignment="Top" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Buscador"  Margin="20"/>
                    <Button Grid.Column="1" Content="Usuarios"  Margin="20"/>
                    <Button Grid.Column="2" Content="Reservas"  Margin="20"/>
                    <Button Grid.Column="3" Content="Habitaciones"  Margin="20"/>
                </Grid>
            </Border>

            <TextBlock Grid.Row="1"   FontSize="40" Margin="20,0,0,0" FontWeight="Bold" Foreground="{StaticResource TextoClaroBrush}">Buscador</TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="1"   FontSize="40" Margin="20,0,0,0" FontWeight="Bold" Foreground="{StaticResource TextoClaroBrush}">Usuarios</TextBlock>


            <Border Grid.Row="2" CornerRadius="50,0,20,0"  BorderThickness="0,4,0,4" Margin="20" Padding="20,30,20,0"
            BorderBrush="{StaticResource BordesRecuadrosBrush}"  
            Background="{StaticResource FondoRecuadrosBrush}">
                <StackPanel>
                    <!-- Rol -->
                    <TextBlock Text="Rol"  Margin="0,10,0,5" />
                    <ComboBox  >
                        <ComboBoxItem Content="Administrador" />
                        <ComboBoxItem Content="Cliente" />
                    </ComboBox>

                    <!-- Usuarios -->
                    <TextBlock Text="Usuarios"  Margin="0,10,0,5" />
                    <WrapPanel>
                        <CheckBox  Content="Nuevo" Margin="0,0,10,0" />
                        <CheckBox  Content="Repetidor"/>
                    </WrapPanel>

                    <!-- Fecha de nacimiento -->
                    <TextBlock Text="Fecha de nacimiento" Margin="0,10,0,5" />
                    <DatePicker/>

                    <!-- Ciudad -->
                    <TextBlock Text="Ciudad"  Margin="0,10,0,5" />
                    <ComboBox >
                        <ComboBoxItem Content="Alicante" />
                        <ComboBoxItem Content="Barcelona" />
                        <ComboBoxItem Content="Madrid" />
                    </ComboBox>

                    <!-- Sexo -->
                    <TextBlock Text="Sexo" Margin="0,10,0,5" />
                    <WrapPanel>
                        <RadioButton Content="M" GroupName="Sexo" Margin="0,0,10,0" />
                        <RadioButton Content="F"  GroupName="Sexo" Margin="0,0,10,0" />
                        <RadioButton Content="Indeterminado"  GroupName="Sexo" />
                    </WrapPanel>

                    <!-- VIP -->
                    <ToggleButton Content="VIP"  Margin="0,20,0,0" />

                    <!-- Buscar -->
                    <Button Content="Buscar"  Margin="0,20,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="2" CornerRadius="50,0,20,0"  BorderThickness="0,4,0,4" Padding="30"
            BorderBrush="{StaticResource BordesRecuadrosBrush}"  
            Background="{StaticResource FondoRecuadrosBrush}">
                <ListView >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="50" Header=" ">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox  />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="50" Header="ID" DisplayMemberBinding="{Binding ID}" />
                            <GridViewColumn Width="100" Header="Foto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Foto}" Width="40" Height="40" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="150" Header="Nombre" DisplayMemberBinding="{Binding Nombre}" />
                            <GridViewColumn Width="100" Header="Rol" DisplayMemberBinding="{Binding Rol}" />
                            <GridViewColumn Width="50" Header="VIP">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding VIP}"  />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100" Header="Acción">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="✏️" />
                                            <Button Content="❌"  />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
    </Border>
</Window>
