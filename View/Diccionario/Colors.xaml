<!--Diccionario de Colores-->
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ColorFondoDeVentana">#012E40</Color>
    <Color x:Key="ColorBordesRecuadros">#024959</Color>
    <Color x:Key="ColorFondoRecuadros">#026773</Color>
    <Color x:Key="ColorDetalles">#3CA6A6</Color>
    <Color x:Key="ColorFondoTexto">#F2E3D5</Color>
    <Color x:Key="ColorTextoClaro">#F2E3D5</Color>
    <Color x:Key="ColorTextoOscuro">#024959</Color>
    <Color x:Key="ColorSombreador">#024959</Color>

    <SolidColorBrush x:Key="FondoDeVentanaBrush" Color="{StaticResource ColorFondoDeVentana}"/>
    <SolidColorBrush x:Key="BordesRecuadrosBrush" Color="{StaticResource ColorBordesRecuadros}"/>
    <SolidColorBrush x:Key="FondoRecuadrosBrush" Color="{StaticResource ColorFondoRecuadros}"/>
    <SolidColorBrush x:Key="DetallesBrush" Color="{StaticResource ColorDetalles}"/>
    <SolidColorBrush x:Key="FondoTextoBrush" Color="{StaticResource ColorFondoTexto}"/>
    <SolidColorBrush x:Key="TextoClaroBrush" Color="{StaticResource ColorTextoClaro}"/>
    <SolidColorBrush x:Key="TextoOscuroBrush" Color="{StaticResource ColorTextoOscuro}"/>
    <SolidColorBrush x:Key="SombreadorBrush" Color="{StaticResource ColorSombreador}"/>
</ResourceDictionary>